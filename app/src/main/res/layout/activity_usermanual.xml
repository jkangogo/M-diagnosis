<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kiprotich.kangogo.UserManual">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- links -->
            <TextView
                android:id="@+id/about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/help_text"
                android:textAlignment="center"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="You create session once you accept the disclaimer note,\nYou will be able to use the application."
                        android:textSize="23dp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:id="@+id/Session"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/session" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:fontFamily="serif"
                        android:textStyle="bold|italic"
                        android:text="Once you have created your session, Use the gps tracker to navigate the nearest hospital of your choice"/>
                    <ImageView
                        android:id="@+id/gpsNav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mapsnav"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:fontFamily="serif"
                        android:textStyle="bold|italic"
                        android:text="How the maps shall display"/>
                    <ImageView
                        android:id="@+id/gpsMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gpsmap"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:fontFamily="serif"
                        android:textStyle="bold|italic"
                        android:text="Select the symptoms you have and press Diagnose button \nThe system shall generate the probable diseases that you might be suffering from"/>
                    <ImageView
                        android:id="@+id/diagnosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/diagnosis"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:fontFamily="serif"
                        android:textStyle="bold|italic"
                        android:text="To do other activities in the application, you can use menu items at the right top corner \ni.e. Logging out to end the session, viewing the legal notice from the developer e.t.c."/>
                    <ImageView
                        android:id="@+id/menuItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/items"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


</RelativeLayout>